            "@medusa-marketplace/@medusajs/medusa-cli": ["packages/@medusajs/medusa-cli/src/index.ts"],
            "@medusa-marketplace/@medusajs/medusa-js": ["packages/@medusajs/medusa-js/src/index.ts"]
